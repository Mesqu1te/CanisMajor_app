<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/onyx"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/login_auth_button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/rounded_left_french_gray_26dp"
        android:fontFamily="@font/ruda_bold"
        android:gravity="center"
        android:paddingStart="21dp"
        android:paddingEnd="21dp"
        android:text="Авторизация"
        android:textColor="@color/onyx"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <TextView
        android:id="@+id/login_register_button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/rounded_right_unchecked_french_gray_26dp"
        android:fontFamily="@font/ruda_bold"
        android:gravity="center"
        android:paddingStart="21dp"
        android:paddingEnd="21dp"
        android:text="Регистрация"
        android:textColor="@color/french_gray"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <TextView
        android:id="@+id/login_title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/ruda_bold"
        android:gravity="center"
        android:text="Интерактивная система обучения"
        android:textColor="@color/french_gray"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/login_login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/ruda_regular"
        android:text="Логин:"
        android:textColor="@color/reseda_green"
        app:layout_constraintStart_toStartOf="@+id/login_auth_button"
        app:layout_constraintTop_toBottomOf="@+id/login_auth_button" />

    <TextView
        android:id="@+id/login_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/ruda_regular"
        android:text="Пароль:"
        android:textColor="@color/reseda_green"
        app:layout_constraintStart_toStartOf="@+id/login_auth_button"
        app:layout_constraintTop_toBottomOf="@+id/login_login_field" />

    <TextView
        android:id="@+id/login_password_confirmation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/ruda_regular"
        android:text="Повторите пароль:"
        android:textColor="@color/reseda_green"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/login_auth_button"
        app:layout_constraintTop_toBottomOf="@+id/login_password_field" />

    <EditText
        android:id="@+id/login_login_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext_bordered"
        android:ems="10"
        android:fontFamily="@font/ruda_bold"
        android:hint="ФИО"
        android:inputType="text"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp"
        android:textColor="@color/french_gray"
        android:textColorHint="@color/grey"
        app:layout_constraintEnd_toEndOf="@+id/login_register_button"
        app:layout_constraintStart_toStartOf="@+id/login_auth_button"
        app:layout_constraintTop_toBottomOf="@+id/login_login_text" />

    <EditText
        android:id="@+id/login_password_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext_bordered"
        android:ems="10"
        android:fontFamily="@font/ruda_bold"
        android:inputType="textPassword"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp"
        android:textColor="@color/french_gray"
        app:layout_constraintEnd_toEndOf="@+id/login_register_button"
        app:layout_constraintStart_toStartOf="@+id/login_auth_button"
        app:layout_constraintTop_toBottomOf="@+id/login_password_text" />

    <EditText
        android:id="@+id/login_password_confirmation_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext_bordered"
        android:ems="10"
        android:fontFamily="@font/ruda_bold"
        android:inputType="textPassword"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp"
        android:textColor="@color/french_gray"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/login_register_button"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/login_auth_button"
        app:layout_constraintTop_toBottomOf="@+id/login_password_confirmation_text" />

    <TextView
        android:id="@+id/login_appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/comfortaa_bold"
        android:text="AppName"
        android:textColor="@color/french_gray"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/login_authenticate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_french_gray_26dp"
        android:fontFamily="@font/ruda_bold"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="Авторизоваться/Зарегистрироваться"
        android:textColor="@color/onyx"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/login_register_button"
        app:layout_constraintStart_toStartOf="@+id/login_auth_button"
        app:layout_constraintTop_toBottomOf="@+id/login_password_confirmation_field" />

    <include
        android:id="@+id/login_error_window"
        layout="@layout/error_window"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/login_register_button"
        app:layout_constraintStart_toStartOf="@+id/login_auth_button"
        app:layout_constraintTop_toBottomOf="@+id/login_authenticate" />

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        app:srcCompat="@drawable/logo" />

</androidx.constraintlayout.widget.ConstraintLayout>